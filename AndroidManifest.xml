<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dsvoronin.grindfm"
          android:versionCode="6"
          android:versionName="0.3.2">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="9"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application android:name=".GrindApplication"
                 android:icon="@drawable/cat"
                 android:label="@string/app_name">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.NewsActivity"/>
        <activity android:name=".activity.NewsDetailsActivity"/>
        <activity android:name=".activity.VideoActivity"/>
        <activity android:name=".activity.VKActivity"/>
        <activity android:name=".activity.RequestActivity"/>

        <service android:name=".GrindService"/>

        <receiver android:name=".widget.GrindWidgetProvider" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="service-intent"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/grind_widget_provider"/>
        </receiver>

    </application>

</manifest>
