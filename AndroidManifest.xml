<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dsvoronin.grindfm"
          android:versionCode="6"
          android:versionName="0.3.2">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="9"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application android:name=".GrindApplication"
                 android:icon="@drawable/cat"
                 android:label="@string/app_name">

        <activity android:name=".activity.NewsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.GrindPreferencesActivity"/>

        <service android:name=".GrindService"/>

    </application>

</manifest>
