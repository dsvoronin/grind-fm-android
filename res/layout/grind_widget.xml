<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="horizontal"
              android:layout_margin="5dp"
              android:padding="5dp"
              android:background="@drawable/widget_gradient">

    <ImageView android:layout_height="wrap_content"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:src="@drawable/grind_logo"
               android:id="@+id/widget_logo"
               android:layout_gravity="center"
               android:contentDescription="@string/content_description_image"/>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/widget_gradient">

        <ImageView android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:clickable="true"
                   android:src="@drawable/widget_button"
                   android:id="@+id/widget_button"
                   android:contentDescription="@string/content_description_image"/>

        <ProgressBar android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:visibility="gone"
                     android:layout_centerInParent="true"
                     android:id="@+id/widget_progress_bar"
                     style="@android:style/Widget.ProgressBar.Large"/>

    </RelativeLayout>

</LinearLayout>