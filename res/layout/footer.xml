<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:grind="http://schemas.android.com/apk/res/com.dsvoronin.grindfm"
              android:layout_width="fill_parent"
              android:layout_height="50dp"
              android:id="@+id/footer"
              android:background="@drawable/footer_gradient"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal">

    <com.dsvoronin.grindfm.view.MenuButton android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="fill_parent"
                                           android:id="@+id/menu_radio"
                                           grind:image="@drawable/menu_radio_selector"/>

    <com.dsvoronin.grindfm.view.MenuButton android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="fill_parent"
                                           android:id="@+id/menu_news"
                                           grind:image="@drawable/menu_news_selector"/>

    <com.dsvoronin.grindfm.view.MenuButton android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="fill_parent"
                                           android:id="@+id/menu_news_goha"
                                           grind:image="@drawable/menu_goha_selector"/>

    <com.dsvoronin.grindfm.view.MenuButton android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="fill_parent"
                                           android:id="@+id/menu_video"
                                           grind:image="@drawable/menu_youtube_selector"/>

    <com.dsvoronin.grindfm.view.MenuButton android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="fill_parent"
                                           android:id="@+id/menu_vk"
                                           grind:image="@drawable/menu_vk_selector"/>

</LinearLayout>