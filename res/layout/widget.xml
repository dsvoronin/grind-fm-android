<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="6dp"
                android:background="@drawable/dialog_full_holo_dark">

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_alignParentLeft="true"
               android:scaleType="fitStart"
               android:id="@+id/widget_logo"
               android:src="@drawable/cat"/>

    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:visibility="visible"
               android:src="@android:drawable/ic_media_play"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@id/widget_logo"
               android:id="@+id/widget_play"/>

    <TextView android:layout_width="fill_parent"
              android:layout_toRightOf="@id/widget_play"
              android:id="@+id/widget_text"
              android:layout_marginLeft="30dp"
              android:layout_centerVertical="true"
              android:typeface="serif"
              android:text="@string/app_name"
              android:layout_height="wrap_content"/>

</RelativeLayout>